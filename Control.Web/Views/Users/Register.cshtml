@model RegistrationViewModel;

@{
	ViewData["Title"] = "Регистрация";
}

<div class="row">
	<div>
		<p>
			<h1>Регистрация</h1>
		</p>

		<div class="row">
			<div class="col">
				<form asp-controller="Users" asp-action="Register" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="row">
						<div class="col">
							<div class="form-group">
								<label asp-for="Email" class="control-label"></label>
								<input asp-for="Email" type="email" required class="form-control" />
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>

							<div class="form-group">
								<label asp-for="Name" class="control-label"></label>
								<input asp-for="Name" type="text" required minlength="2" maxlength="100" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>

							<div class="form-group">
								<label asp-for="Surname" class="control-label"></label>
								<input asp-for="Surname" type="text" required minlength="2" maxlength="100" class="form-control" />
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div>

							<div class="form-group">
								<label asp-for="Password" class="control-label"></label>
								<input asp-for="Password" type="password" required class="form-control" />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>

							<div class="form-group">
								<label asp-for="ConfirmedPassword" class="control-label"></label>
								<input asp-for="ConfirmedPassword" type="password" required class="form-control" />
								<span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-outline-success" asp-controller="Users" asp-action="Register">Регистрация</button>
						<a class="btn btn-outline-primary" asp-controller="Projects" asp-action="Index">Назад</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
